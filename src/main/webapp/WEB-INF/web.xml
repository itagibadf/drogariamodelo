<?xml version="1.0" encoding="UTF-8"?>
<web-app version="3.0" xmlns="http://java.sun.com/xml/ns/javaee" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://java.sun.com/xml/ns/javaee http://java.sun.com/xml/ns/javaee/web-app_3_0.xsd">
    <servlet>
        <servlet-name>GerenteServlet</servlet-name>
        <servlet-class>integrator.GerenteServlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>ValidaServlet</servlet-name>
        <servlet-class>integrator.ValidaServlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>ValidacaoUsuario</servlet-name>
        <servlet-class>integrator.ValidacaoUsuario</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>UsuarioServlet</servlet-name>
        <servlet-class>integrator.UsuarioServlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>ProdutoServlet</servlet-name>
        <servlet-class>integrator.ProdutoServlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>validacaoUsuarioGerente</servlet-name>
        <servlet-class>integrator.validacaoUsuarioGerente</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>PedidoServlet</servlet-name>
        <servlet-class>integrator.PedidoServlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>upload</servlet-name>
        <servlet-class>integrator.upload</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>GerenteServlet</servlet-name>
        <url-pattern>/GerenteServlet</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>ValidaServlet</servlet-name>
        <url-pattern>/ValidaServlet</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>ValidacaoUsuario</servlet-name>
        <url-pattern>/ValidacaoUsuario</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>UsuarioServlet</servlet-name>
        <url-pattern>/UsuarioServlet</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>ProdutoServlet</servlet-name>
        <url-pattern>/ProdutoServlet</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>validacaoUsuarioGerente</servlet-name>
        <url-pattern>/validacaoUsuarioGerente</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>PedidoServlet</servlet-name>
        <url-pattern>/PedidoServlet</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>upload</servlet-name>
        <url-pattern>/upload</url-pattern>
    </servlet-mapping>
    <session-config>
        <session-timeout>90</session-timeout>
    </session-config>
</web-app>
